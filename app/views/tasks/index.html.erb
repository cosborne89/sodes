<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Priority</th>
    <th>Active</th>
    <th>Complete</th>
    <th>Description</th>
    <th>Due date</th>
    <th>Contact</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.priority %></td>
    <td><%= task.active %></td>
    <td><%= task.complete %></td>
    <td><%= task.description %></td>
    <td><%= task.due_date %></td>
    <td><%= task.contact %></td>
    <td><%= @projects.find(task.project_id).title %></td>
    <td><%= link_to 'Show', user_task_path(params[:user_id], task) %></td>
    <td><%= link_to 'Edit', edit_user_task_path(params[:user_id], task) %></td>
    <td><%= link_to 'Destroy', user_task_path(params[:user_id], task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_user_task_path(@user.displayname) %>
